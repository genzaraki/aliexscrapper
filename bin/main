buzzfeedPages << "https://www.buzzfeed.com/life"
buzzfeedPages << "https://www.buzzfeed.com/music"
buzzfeedPages << "https://www.buzzfeed.com/nifty"
buzzfeedPages << "https://www.buzzfeed.com/parents"
buzzfeedPages << "https://www.buzzfeed.com/quizzes"
